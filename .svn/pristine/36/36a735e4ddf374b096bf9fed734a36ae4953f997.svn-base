input.encoding=UTF-8
output.encoding=UTF-8
default.contenttype=text/html;charset=UTF-8

#\u9519\u8bef\u6d88\u606f\u8ddf\u8e2a 
runtime.log.invalid.references = true
runtime.log.logsystem.class =com.tzg.ex.mvc.web.view.velocity.log.SLF4JLogChute

#\u8fc7\u671f\u914d\u7f6e
